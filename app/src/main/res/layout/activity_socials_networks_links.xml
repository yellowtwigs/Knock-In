<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/my_hub_layout_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginBottom="8dp"
            android:background="@color/transparentColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/facebook_link_socials_networks"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="40dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:srcCompat="@drawable/ic_facebook" />

        <ImageView
            android:id="@+id/messenger_link_socials_networks"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="100dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:srcCompat="@drawable/ic_messenger" />

        <ImageView
            android:id="@+id/spotify_link_socials_networks"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="25dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/facebook_link_socials_networks"
            app:srcCompat="@drawable/ic_spotify" />

        <ImageView
            android:id="@+id/youtube_link_socials_networks"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="100dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/messenger_link_socials_networks"
            app:srcCompat="@drawable/ic_youtube" />

        <ImageView
            android:id="@+id/instagram_link_socials_networks"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="100dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/youtube_link_socials_networks"
            app:srcCompat="@drawable/ic_instagram" />

        <ImageView
            android:id="@+id/whatsapp_link_socials_networks"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="25dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spotify_link_socials_networks"
            app:srcCompat="@drawable/ic_whatsapp" />

        <ImageView
            android:id="@+id/telegram_link_socials_networks"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="100dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/twitter_link_socials_networks"
            app:srcCompat="@drawable/ic_telegram"
            tools:ignore="DuplicateIds" />

        <ImageView
            android:id="@+id/twitter_link_socials_networks"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="100dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/instagram_link_socials_networks"
            app:srcCompat="@drawable/ic_twitter" />

        <ImageView
            android:id="@+id/linkedin_link_socials_networks"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="25dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/skype_link_socials_networks"
            app:srcCompat="@drawable/ic_linkedin" />

        <ImageView
            android:id="@+id/skype_link_socials_networks"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="25dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/whatsapp_link_socials_networks"
            app:srcCompat="@drawable/ic_skype" />

        <ImageView
            android:id="@+id/gmail_link_socials_networks"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="25dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linkedin_link_socials_networks"
            app:srcCompat="@drawable/ic_gmail" />

        <ImageView
            android:id="@+id/outlook_link_socials_networks"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="100dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/telegram_link_socials_networks"
            app:srcCompat="@drawable/ic_outlook" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#f0f0f0"
            app:itemIconTint="@color/bottom_navigation_color"
            app:itemTextColor="@color/bottom_navigation_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:labelVisibilityMode="labeled"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/main_navigation_view"
            style="@style/BottomNavigationView"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer" />
</androidx.drawerlayout.widget.DrawerLayout>