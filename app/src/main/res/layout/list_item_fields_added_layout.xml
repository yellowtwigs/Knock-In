<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="28dp">
    <Spinner
        android:id="@+id/list_item_field_added_spinner"
        android:layout_width="125dp"
        android:layout_height="37dp"
        android:background="@android:drawable/btn_dropdown"
        android:layout_centerVertical="true"
        android:spinnerMode="dropdown" />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/list_item_field_added_edit_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_height"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/list_item_field_added_spinner"
        android:layout_alignParentEnd="true">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edit_text"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textColor="@color/textColor" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/delete_field"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_x_button"
        android:layout_marginEnd="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>