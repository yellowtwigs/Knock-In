<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.activity.ManageMyScreenActivity"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginBottom="8dp"
            android:background="@color/transparentColor"
            app:title="@string/manage_my_screen_toolbar_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/activity_settings_change_nb_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="35dp"
            android:padding="2dp"
            android:text="@string/manage_my_screen_number_of_line"
            android:textColor="@color/textColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/activity_settings_imageView_1_contact"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp" />

            <ImageView
                android:id="@+id/activity_settings_imageView_3_contact"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:padding="2dp" />

            <ImageView
                android:id="@+id/activity_settings_imageView_4_contact"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:padding="2dp" />

            <ImageView
                android:id="@+id/activity_settings_imageView_5_contact"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:padding="2dp" />

            <ImageView
                android:id="@+id/activity_settings_imageView_6_contact"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp" />
        </LinearLayout>


        <TextView
            android:id="@+id/manage_theme_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/manage_my_screen_theme"
            android:textColor="@color/textColor"
            android:textSize="@dimen/settings_title_size"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/manage_theme"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="47dp"
            android:background="@drawable/selector_relative_layout_with_border"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/manage_theme_title">

            <TextView
                android:id="@+id/manage_theme_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/manage_my_screen_theme"
                android:textColor="@color/textColor"
                android:textSize="@dimen/settings_subtitle_size"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/manage_theme_long_text"
                android:layout_width="333dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/manage_theme_subtitle"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="16dp"
                android:text="@string/manage_my_screen_theme_long_text"
                android:textColor="@color/textColor"
                android:textSize="@dimen/settings_long_text_size"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" />


            <Switch
                android:id="@+id/manage_theme_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/manage_call_popup"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="47dp"
            android:background="@drawable/selector_relative_layout_with_border"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/manage_theme_title">

            <TextView
                android:id="@+id/manage_call_popup_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/manage_my_screen_contact_popup"
                android:textColor="@color/textColor"
                android:textSize="@dimen/settings_subtitle_size"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/manage_call_popup_long_text"
                android:layout_width="333dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/manage_call_popup_title"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="16dp"
                android:text="@string/manage_my_screen_contact_popup_long_text"
                android:textColor="@color/textColor"
                android:textSize="@dimen/settings_long_text_size"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/manage_call_popup_title" />


            <Switch
                android:id="@+id/manage_call_popup_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/manage_searchbar_pos"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="47dp"
            android:background="@drawable/selector_relative_layout_with_border"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/manage_theme_title">

            <TextView
                android:id="@+id/manage_searchbar_pos_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/manage_my_screen_searchbar_pos"
                android:textColor="@color/textColor"
                android:textSize="@dimen/settings_subtitle_size"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/manage_searchbar_pos_long_text"
                android:layout_width="333dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/manage_searchbar_pos_title"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="16dp"
                android:text="@string/manage_my_screen_searchbar_pos_long_text"
                android:textColor="@color/textColor"
                android:textSize="@dimen/settings_long_text_size"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" />


            <Switch
                android:id="@+id/manage_searchbar_pos_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer" />


</androidx.drawerlayout.widget.DrawerLayout>