<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".AddNewContactActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorKnocker"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.example.firsttestknocker.CircularImageView
            android:id="@+id/add_new_contact_rounded_image_view_id"
            android:layout_width="@dimen/rounded_image_view_height_width"
            android:layout_height="@dimen/rounded_image_view_height_width"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="96dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/circle"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/img_avatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/add_new_contact_last_name_id"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginTop="44dp"
            android:autofillHints="@string/add_new_contact_last_name"
            android:background="@drawable/custom_edit_text"
            android:hint="@string/add_new_contact_last_name"
            android:inputType="textPersonName"
            android:textColor="@color/textColor"
            app:layout_constraintTop_toBottomOf="@+id/add_new_contact_rounded_image_view_id"
            tools:layout_editor_absoluteX="0dp" />

        <EditText
            android:id="@+id/add_new_contact_first_name_id"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginTop="15dp"
            android:autofillHints="@string/add_new_contact_first_name"
            android:background="@drawable/custom_edit_text"
            android:hint="@string/add_new_contact_first_name"
            android:inputType="textPersonName"
            android:textColor="@color/textColor"
            app:layout_constraintTop_toBottomOf="@+id/add_new_contact_last_name_id" />

        <View
            android:id="@+id/add_new_contact_phone_number_view_id"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginTop="100dp"
            android:background="@color/borderViewColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_new_contact_first_name_id" />

        <Spinner
            android:id="@+id/add_new_contact_phone_number_spinner"
            android:layout_width="147dp"
            android:layout_height="45dp"
            android:entries="@array/add_new_contact_phone_number_arrays"
            android:prompt="@string/add_new_contact_phone_number_mobile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_new_contact_phone_number_view_id" />

        <EditText
            android:id="@+id/add_new_contact_phone_number_id"
            android:layout_width="257dp"
            android:layout_height="43dp"
            android:layout_marginEnd="3dp"
            android:autofillHints="@string/add_new_contact_phone_number"
            android:background="@drawable/custom_edit_text"
            android:hint="@string/add_new_contact_phone_number"
            android:inputType="phone"
            android:textColor="@color/textColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/add_new_contact_phone_number_spinner"
            app:layout_constraintTop_toBottomOf="@+id/add_new_contact_phone_number_view_id" />


        <View
            android:id="@+id/add_new_contact_mail_view_id"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:background="@color/borderViewColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_new_contact_phone_number_id" />

        <Spinner
            android:id="@+id/add_new_contact_mail_spinner_id"
            android:layout_width="145dp"
            android:layout_height="@dimen/edit_text_height"
            android:entries="@array/add_new_contact_mail_arrays"
            android:prompt="@string/add_new_contact_mail_mobile"
            app:layout_constraintEnd_toStartOf="@+id/add_new_contact_mail_id"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_new_contact_mail_view_id" />

        <EditText
            android:id="@+id/add_new_contact_mail_id"
            android:layout_width="262dp"
            android:layout_height="44dp"
            android:layout_marginStart="4dp"
            android:autofillHints="@string/add_new_contact_mail"
            android:background="@drawable/custom_edit_text"
            android:hint="@string/add_new_contact_mail"
            android:inputType="textEmailAddress"
            android:textColor="@color/textColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/add_new_contact_mail_spinner_id"
            app:layout_constraintTop_toBottomOf="@+id/add_new_contact_mail_view_id" />

        <View
            android:id="@+id/add_new_contact_add_field_view"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:background="@color/borderViewColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_new_contact_mail_id" />

        <Button
            android:id="@+id/add_new_contact_add_field_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:text="@string/add_new_contact_add_field"
            app:layout_constraintTop_toBottomOf="@+id/add_new_contact_add_field_view"
            tools:layout_editor_absoluteX="0dp" />


    <Spinner
        android:id="@+id/add_new_contact_priority"
        android:layout_width="122dp"
        android:layout_height="37dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toTopOf="@+id/add_new_contact_add_field_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/add_new_contact_add_field_view"
        app:layout_constraintVertical_bias="0.923" />
</android.support.constraint.ConstraintLayout>
</ScrollView>

