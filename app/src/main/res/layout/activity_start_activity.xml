<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper_incoming_call">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/start_activity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="8dp"
            android:text="@string/start_activity_title"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:id="@+id/start_activity_import_contacts_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/start_activity_title">

            <TextView
                android:id="@+id/start_activity_import_contacts_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="25dp"
                android:text="Importation des contacts"
                android:textColor="@color/lightColor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/start_activity_import_contacts_subtitle"
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/start_activity_import_contacts_title"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="Importer vos contacts Android dans Knocker et communiquer avec eux plus efficacement"
                android:textColor="@color/textColorLight"
                android:textSize="14sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/start_activity_import_contacts_button"
                android:layout_width="@dimen/start_activity_button_width"
                android:layout_height="@dimen/start_activity_button_height"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:text="@string/import_contacts_button_yes" />

            <ProgressBar
                android:id="@+id/start_activity_import_contacts_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                android:indeterminate="true"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/start_activity_import_contacts_check"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_check" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/start_activity_notifications_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/start_activity_import_contacts_layout">

            <TextView
                android:id="@+id/start_activity_activate_notifications_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="25dp"
                android:text=""
                android:textColor="@color/lightColor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/start_activity_activate_notifications_subtitle"
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/start_activity_activate_notifications_title"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/textColorLight"
                android:textSize="14sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/start_activity_activate_notifications_button"
                android:layout_width="@dimen/start_activity_button_width"
                android:layout_height="@dimen/start_activity_button_height"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:text="Activer" />

            <ProgressBar
                android:id="@+id/start_activity_activate_notifications_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                android:indeterminate="true"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/start_activity_activate_notifications_check"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_check" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/start_activity_superposition_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/start_activity_notifications_layout">

            <TextView
                android:id="@+id/start_activity_superposition_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="25dp"
                android:text="Autoriser la superposition"
                android:textColor="@color/lightColor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/start_activity_superposition_subtitle"
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/start_activity_superposition_title"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="Autorisez cette application Ã  se superposer aux autres applications"
                android:textColor="@color/textColorLight"
                android:textSize="14sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/start_activity_superposition_button"
                android:layout_width="@dimen/start_activity_button_width"
                android:layout_height="@dimen/start_activity_button_height"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:text="Autoriser" />

            <ProgressBar
                android:id="@+id/start_activity_superposition_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                android:indeterminate="true"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/start_activity_superposition_check"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_check" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/start_activity_permissions_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/start_activity_superposition_layout">

            <TextView
                android:id="@+id/start_activity_permissions_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="25dp"
                android:text="Autorisations"
                android:textColor="@color/lightColor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/start_activity_permissions_subtitle"
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/start_activity_permissions_title"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="Vous pourrez effectuer des appels et envoyer des sms depuis Knocker"
                android:textColor="@color/textColorLight"
                android:textSize="14sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/start_activity_permissions_button"
                android:layout_width="@dimen/start_activity_button_width"
                android:layout_height="@dimen/start_activity_button_height"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:text="Autoriser" />

            <ProgressBar
                android:id="@+id/start_activity_permissions_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                android:indeterminate="true"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/start_activity_permissions_check"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_check" />

        </RelativeLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/start_activity_skip"
            android:layout_width="@dimen/start_activity_button_width"
            android:layout_height="@dimen/start_activity_button_height"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="8dp"
            android:text="Passer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/start_activity_permissions_layout" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/start_activity_next"
            android:layout_width="@dimen/start_activity_button_width"
            android:layout_height="@dimen/start_activity_button_height"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="8dp"
            android:text="Suivant"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/start_activity_permissions_layout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>