                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_margin="8dp"
                        app:srcCompat="@drawable/ic_circular" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/settings_notif_sound_knockin_layout"
