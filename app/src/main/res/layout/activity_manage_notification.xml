                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_toEndOf="@+id/settings_notif_sound_moanin_img"
                        android:text="@string/notification_vip_message_tone_moanin"
