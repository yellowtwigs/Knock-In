<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@drawable/selector_relative_layout"
    android:clickable="true"
    android:focusable="true">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:layout_marginTop="2dp"
        android:background="@color/borderViewColorDark" />

    <ImageView
        android:id="@+id/phone_log_calls_image_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_user_om" />

    <TextView
        android:id="@+id/phone_log_calls_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/phone_log_calls_image_view"
        android:text="Name"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/phone_log_calls_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="18dp"
        android:layout_toEndOf="@+id/phone_log_calls_image_view"
        android:text="Number"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/phone_log_calls_phone_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="18dp"
        android:layout_toEndOf="@+id/phone_log_calls_phone_number"
        android:text="Date"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/phone_log_calls_phone_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="18dp"
        android:layout_toEndOf="@+id/phone_log_calls_phone_date"
        android:text="Duration"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/phone_log_calls_phone_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="18dp"
        android:layout_toEndOf="@+id/phone_log_calls_phone_duration"
        android:text="Type"
        android:textSize="10sp" />
