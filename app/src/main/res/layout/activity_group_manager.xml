<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/group_manager_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/group_manager_main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/backgroundColor"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/group_manager_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/backgroundColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/group_manager_open_drawer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:background="?attr/actionBarItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    app:srcCompat="@drawable/ic_open_drawer" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/textColor"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="25dp"
                    android:layout_toEndOf="@+id/group_manager_open_drawer"
                    android:text="@string/group_manager_toolbar_title"
                    android:textSize="20sp"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/group_manager_floating_button_sms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="35dp"
                    android:background="@color/colorPrimary"
                    android:src="@drawable/ic_message_floating"
                    android:visibility="gone"
                    app:backgroundTint="@color/colorPrimary"
                    tools:targetApi="P" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/group_manager_toolbar_help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:background="?attr/actionBarItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    app:srcCompat="@drawable/ic_help" />

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/group_manager_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="5dp"
                android:columnWidth="120dp"
                android:gravity="center"
                android:numColumns="auto_fit"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/navigation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/group_manager_toolbar"/>

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/navigation"
                style="@style/BottomNavigationView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.70"
                android:background="?attr/backgroundColor"
                android:fadingEdge="horizontal"
                android:fadingEdgeLength="20dp"
                app:itemIconTint="@color/bottom_navigation_color"
                app:itemTextColor="@color/bottom_navigation_color"
                app:labelVisibilityMode="labeled"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:menu="@menu/tab_layout_menu" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/group_manager_floating_button_gmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="35dp"
            android:background="@color/colorPrimary"
            android:src="@drawable/ic_gmail_floating"
            android:visibility="gone"
            app:backgroundTint="@color/colorPrimary"
            app:layout_constraintBottom_toTopOf="@id/group_manager_floating_button_send_id"
            app:layout_constraintEnd_toEndOf="parent"
            tools:targetApi="P" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/group_manager_floating_button_send_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/floating_button_margin"
            android:layout_marginBottom="80dp"
            android:background="@color/colorPrimary"
            android:src="@drawable/ic_exchange_arrows"
            android:visibility="gone"
            app:backgroundTint="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:targetApi="P" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/group_manager_floating_button_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/floating_button_margin"
            android:layout_marginBottom="80dp"
            android:background="@color/colorPrimary"
            android:src="@drawable/ic_add"
            app:backgroundTint="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/group_manager_nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="?attr/backgroundColor"
        app:headerLayout="@layout/nav_header_drawer"
        app:itemIconTint="@color/drawer_navigation_color"
        app:itemTextColor="@color/drawer_navigation_color"
        app:menu="@menu/menu_left_drawer" >

        <RelativeLayout
            android:id="@+id/manage_theme"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp">

            <RelativeLayout
                android:id="@+id/settings_left_drawer_layout"
                android:layout_width="match_parent"
                android:layout_height="215dp"
                android:layout_alignParentBottom="true">

                <RelativeLayout
                    android:id="@+id/settings_left_drawer_theme_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp">

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/settings_left_drawer_theme_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:id="@+id/settings_left_drawer_theme_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/settings_left_drawer_theme_title"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="3dp"
                        android:layout_toStartOf="@+id/settings_left_drawer_theme_switch"
                        android:text="@string/manage_my_screen_theme_long_text"
                        android:textColor="?attr/darkGreyColor"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/settings_left_drawer_theme_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/settings_left_drawer_theme_switch"
                        android:text="@string/manage_my_screen_theme"
                        android:textColor="?attr/textColor"
                        android:textSize="17sp"
                        android:textStyle="normal" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/settings_call_popup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/settings_left_drawer_theme_layout"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp">

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/settings_call_popup_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:id="@+id/settings_call_popup_long_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/settings_call_popup_title"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="3dp"
                        android:layout_toStartOf="@+id/settings_call_popup_switch"
                        android:text="@string/manage_my_screen_contact_popup_long_text"
                        android:textColor="?attr/darkGreyColor"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/settings_call_popup_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_contact_popup_phone_call"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/settings_call_popup_switch"
                        android:textColor="?attr/textColor"
                        android:textSize="17sp"
                        android:textStyle="normal" />

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/settings_left_drawer_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/settings_left_drawer_view_horizontal"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="5dp"
                android:text="@string/left_drawer_settings"
                android:textColor="?attr/textColor"
                android:textSize="23sp" />

            <View
                android:id="@+id/settings_left_drawer_view_horizontal"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_above="@+id/settings_left_drawer_layout"
                android:layout_marginBottom="15dp"
                android:background="#555555" />

        </RelativeLayout>

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>
