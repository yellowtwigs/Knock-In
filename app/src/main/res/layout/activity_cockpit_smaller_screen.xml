                            android:textColor="@color/greyColor"
                            android:textSize="10sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/cockpit_tv_4" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/cockpit_call_keyboard_5"
                    android:layout_width="@dimen/cockpit_keyboard_width"
                    android:layout_height="@dimen/cockpit_keyboard_height"
