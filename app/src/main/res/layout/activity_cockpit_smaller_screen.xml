                    </androidx.constraintlayout.widget.ConstraintLayout>
                </RelativeLayout>
            </TableRow>

            <TableRow>

                <RelativeLayout
                    android:id="@+id/cockpit_call_keyboard_7"
                    android:layout_width="@dimen/cockpit_keyboard_width"
                    android:layout_height="@dimen/cockpit_keyboard_height"
