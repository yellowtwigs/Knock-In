<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cockpit_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">

    <RelativeLayout
        android:id="@+id/cockpit_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/backgroundColor"
        tools:context=".controller.activity.CockpitActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/cockpit_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginBottom="8dp"
            android:background="?attr/transparentColor"
            app:titleTextColor="?attr/textColor" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cockpit_toolbar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/facebook_link_socials_networks"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintEnd_toStartOf="@+id/messenger_link_socials_networks"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_facebook_selector" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/messenger_link_socials_networks"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginEnd="18dp"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintEnd_toStartOf="@+id/whatsapp_link_socials_networks"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_messenger_selector" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/whatsapp_link_socials_networks"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginEnd="18dp"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintEnd_toStartOf="@+id/twitter_link_socials_networks"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_whatsapp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/twitter_link_socials_networks"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginEnd="18dp"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_twitter" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/gmail_link_socials_networks"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="18dp"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/facebook_link_socials_networks"
                app:srcCompat="@drawable/ic_gmail" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/instagram_link_socials_networks"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="18dp"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintStart_toEndOf="@+id/gmail_link_socials_networks"
                app:layout_constraintTop_toBottomOf="@+id/messenger_link_socials_networks"
                app:srcCompat="@drawable/ic_instagram" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/snapchat_link_socials_networks"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="18dp"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintStart_toEndOf="@+id/instagram_link_socials_networks"
                app:layout_constraintTop_toBottomOf="@+id/whatsapp_link_socials_networks"
                app:srcCompat="@drawable/ic_snapchat" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/outlook_link_socials_networks"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="18dp"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/twitter_link_socials_networks"
                app:srcCompat="@drawable/ic_outlook" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/skype_link_socials_networks"
