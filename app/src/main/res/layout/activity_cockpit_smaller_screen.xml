                android:layout_height="55dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="18dp"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/linkedin_link_socials_networks"
                app:layout_constraintTop_toBottomOf="@+id/snapchat_link_socials_networks"
                app:srcCompat="@drawable/ic_youtube" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/telegram_link_socials_networks"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="18dp"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/outlook_link_socials_networks"
                app:srcCompat="@drawable/ic_telegram" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cockpit_call_edit_text_layout"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_above="@+id/cockpit_call_keyboard_view"
            android:background="?attr/backgroundColor"
            android:visibility="visible">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                android:background="@color/darkGreyColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/cockpit_button_add_contact"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_circular_button_plus_selector"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/cockpit_call_phone_number_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/custom_edit_text"
                android:clickable="false"
                android:focusable="false"
                android:inputType="phone"
                android:textColor="?attr/textColor"
                android:textColorHint="?attr/textColor"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/cockpit_call_back_space"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="30dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_backspace_arrow_selector"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TableLayout
            android:id="@+id/cockpit_call_keyboard_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/cockpit_call_layout_id"
            android:background="?attr/backgroundColor"
            android:shrinkColumns="*"
            android:stretchColumns="*"
            android:visibility="visible">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                android:background="@color/darkGreyColor" />

            <TableRow>

                <RelativeLayout
