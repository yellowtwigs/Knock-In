                            android:layout_centerHorizontal="true"
                            android:text="9"
                            android:textColor="?attr/textColor"
                            android:textSize="25sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.495"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/cockpit_tv_9"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="2dp"
                            android:text="WXYZ"
                            android:textAlignment="center"
                            android:textColor="@color/greyColor"
                            android:textSize="10sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/cockpit_tv_9" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </RelativeLayout>

            </TableRow>

            <TableRow>

                <RelativeLayout
                    android:id="@+id/cockpit_call_keyboard_star"
                    android:layout_width="@dimen/cockpit_keyboard_width"
                    android:layout_height="@dimen/cockpit_keyboard_height"
                    android:layout_column="0"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/cockpit_tv_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="*"
                        android:textColor="?attr/textColor"
                        android:textSize="25sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/cockpit_call_keyboard_0"
                    android:layout_width="@dimen/cockpit_keyboard_width"
                    android:layout_height="@dimen/cockpit_keyboard_height"
                    android:layout_column="1"
                    android:background="@drawable/background_layout_selector"
                    android:clickable="true"
                    android:focusable="true">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/cockpit_tv_0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:text="0"
                            android:textColor="?attr/textColor"
                            android:textSize="25sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.495"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/cockpit_tv_0"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:text="+"
                            android:textAlignment="center"
                            android:textColor="@color/greyColor"
                            android:textSize="20sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/cockpit_tv_0" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/cockpit_call_keyboard_sharp"
                    android:layout_width="@dimen/cockpit_keyboard_width"
                    android:layout_height="@dimen/cockpit_keyboard_height"
                    android:layout_column="2"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/cockpit_tv_sharp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="#"
                        android:textColor="?attr/textColor"
                        android:textSize="25sp" />
                </RelativeLayout>
            </TableRow>
        </TableLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cockpit_call_layout_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/navigation"
            android:layout_marginBottom="4dp"
            android:background="?attr/transparentColor"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/navigation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/cockpit_send_message"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_sms_selector"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/cockpit_button_close_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="28dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_phone_keypad_selector"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.489" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/cockpit_incoming_call_button"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="bottom|end"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="#27b769"
                android:src="@drawable/ic_incoming_call"
                android:tint="@color/lightColor"
                app:backgroundTint="#27b769"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/cockpit_button_open_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/navigation"
            android:layout_alignParentEnd="true"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="#27b769"
            android:src="@drawable/ic_phone_keypad"
            android:tint="@color/lightColor"
            android:visibility="gone"
            app:backgroundTint="#27b769" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigation"
            style="@style/BottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:alpha="0.70"
            android:background="?attr/backgroundColor"
            android:fadingEdge="horizontal"
            android:fadingEdgeLength="20dp"
            app:itemIconTint="@color/bottom_navigation_color"
            app:itemTextColor="@color/bottom_navigation_color"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_navigation_view" />
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/cockpit_nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="?attr/backgroundColor"
        app:headerLayout="@layout/nav_header_drawer_smaller_screen"
        app:itemIconTint="@color/drawer_navigation_color"
        app:itemTextColor="@color/drawer_navigation_color"
        app:menu="@menu/menu_left_drawer_layout"
        app:theme="@style/NavigationViewSmallerScreenStyle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/settings_left_drawer_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/settings_left_drawer_view_horizontal"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="10dp"
                android:text="@string/left_drawer_settings"
                android:textColor="?attr/textColor"
                android:textSize="20sp" />

            <View
                android:id="@+id/settings_left_drawer_view_horizontal"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_above="@+id/settings_left_drawer_layout"
                android:background="#555555" />

            <RelativeLayout
                android:id="@+id/settings_left_drawer_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp">

                <RelativeLayout
                    android:id="@+id/settings_left_drawer_theme_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp">

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/settings_left_drawer_theme_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:id="@+id/settings_left_drawer_theme_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/settings_left_drawer_theme_title"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="3dp"
                        android:layout_toStartOf="@+id/settings_left_drawer_theme_switch"
                        android:text="@string/manage_my_screen_theme_long_text"
                        android:textColor="?attr/darkGreyColor"
                        android:textSize="13sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/settings_left_drawer_theme_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/settings_left_drawer_theme_switch"
                        android:text="@string/manage_my_screen_theme"
                        android:textColor="?attr/textColor"
                        android:textSize="17sp"
                        android:textStyle="normal" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/settings_call_popup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/settings_left_drawer_theme_layout"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp">

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/settings_call_popup_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:id="@+id/settings_call_popup_long_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/settings_call_popup_title"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="3dp"
                        android:layout_toStartOf="@+id/settings_call_popup_switch"
                        android:text="@string/manage_my_screen_contact_popup_long_text"
                        android:textColor="?attr/darkGreyColor"
                        android:textSize="13sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/settings_call_popup_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/settings_call_popup_switch"
                        android:text="@string/settings_contact_popup_phone_call"
                        android:textColor="?attr/textColor"
                        android:textSize="17sp"
                        android:textStyle="normal" />

                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>