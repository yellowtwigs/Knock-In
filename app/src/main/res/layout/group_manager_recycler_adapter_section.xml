<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/recycler_section">

    <RelativeLayout
        android:id="@+id/recycler_group_name_relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/section_sms_imageview"
        android:background="@drawable/rounded_button_color_grey">

        <TextView
            android:id="@+id/section_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="test"
            android:textColor="@color/lightColor"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/section_sms_imageview"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:focusable="true"
        android:visibility="visible"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/section_gmail_imageview"
        app:srcCompat="@drawable/ic_sms" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/section_gmail_imageview"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:focusable="true"
        android:visibility="visible"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/section_more_imageView"
        app:srcCompat="@drawable/ic_circular_mail" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/section_more_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="?attr/actionBarItemBackground"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_toolbar_menu" />
</RelativeLayout>