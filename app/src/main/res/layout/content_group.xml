<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLyout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/group_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="?attr/backgroundColor"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/navigation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/group_toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/custom_shadow_background"
                android:elevation="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/group_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:alpha="0.70"
                    android:background="@color/transparentColor"
                    android:backgroundTint="?attr/transparentColor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/group_search_bar"
                    android:layout_width="185dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="8dp"
                    android:background="?attr/backgroundColor"
                    android:hint="@string/group_search_hint"
                    android:inputType="textPersonName"
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/textColor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <GridView
                android:id="@+id/group_grid_view_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="?attr/backgroundColor"
                android:columnWidth="120dp"
                android:gravity="center"
                android:numColumns="auto_fit"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/loadingPanel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="gone">

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminate="true" />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/group_recycler_view_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="?attr/backgroundColor"
                android:columnWidth="120dp"
                android:gravity="center"
                android:numColumns="auto_fit"
                android:visibility="visible" />
        </LinearLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigation"
            style="@style/BottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.70"
            android:background="?attr/backgroundColor"
            android:fadingEdge="horizontal"
            android:fadingEdgeLength="20dp"
            app:itemIconTint="@color/bottom_navigation_color"
            app:itemTextColor="@color/bottom_navigation_color"
            app:labelVisibilityMode="labeled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:menu="@menu/bottom_navigation_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>



    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="?attr/backgroundColor"
        app:headerLayout="@layout/nav_header_drawer"
        app:itemIconTint="@color/drawer_navigation_color"
        app:itemTextColor="@color/drawer_navigation_color"
        app:menu="@menu/menu_left_drawer_layout">

        <RelativeLayout
            android:id="@+id/manage_theme"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/manage_theme_title">

            <RelativeLayout
                android:id="@+id/settings_left_drawer_layout"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_alignParentBottom="true">

                <RelativeLayout
                    android:id="@+id/settings_left_drawer_theme_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp">

                    <Switch
                        android:id="@+id/settings_left_drawer_theme_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:id="@+id/settings_left_drawer_theme_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/settings_left_drawer_theme_title"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="3dp"
                        android:layout_toStartOf="@+id/settings_left_drawer_theme_switch"
                        android:text="@string/manage_my_screen_theme_long_text"
                        android:textColor="?attr/darkGreyColor"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/settings_left_drawer_theme_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/settings_left_drawer_theme_switch"
                        android:text="@string/manage_my_screen_theme"
                        android:textColor="?attr/textColor"
                        android:textSize="17sp"
                        android:textStyle="normal" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/settings_call_popup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/settings_left_drawer_theme_layout"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp">

                    <Switch
                        android:id="@+id/settings_call_popup_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:id="@+id/settings_call_popup_long_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/settings_call_popup_title"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="3dp"
                        android:layout_toStartOf="@+id/settings_call_popup_switch"
                        android:text="@string/manage_my_screen_contact_popup_long_text"
                        android:textColor="?attr/darkGreyColor"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/settings_call_popup_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_contact_popup_phone_call"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/settings_call_popup_switch"
                        android:textColor="?attr/textColor"
                        android:textSize="17sp"
                        android:textStyle="normal" />

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/settings_left_drawer_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/settings_left_drawer_view_horizontal"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="5dp"
                android:text="Settings"
                android:textColor="#000000"
                android:textSize="23sp" />

            <View
                android:id="@+id/settings_left_drawer_view_horizontal"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_above="@+id/settings_left_drawer_layout"
                android:layout_marginBottom="15dp"
                android:background="#555555" />

        </RelativeLayout>

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>
