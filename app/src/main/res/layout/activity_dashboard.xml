<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.statistics.dashboard.DashboardActivity"
    tools:openDrawer="start">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/backgroundColor">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/backgroundColor"
            app:layout_constraintTop_toTopOf="parent"
            app:titleTextColor="?attr/textColor" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/performance_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            tools:srcCompat="@drawable/ic_speedometer_light_green" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/notifications_unprocessed_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toStartOf="@+id/notifications_vip_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/performance_icon">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/notifications_unprocessed_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/darkGreyColor"
                android:cursorVisible="false"
                android:focusable="false"
                android:hint="@string/number_unprocessed_notifications_hint"
                android:inputType="none"
                android:textColor="?attr/textColor"
                android:textColorHint="@color/colorPrimary" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/notifications_vip_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="@+id/notifications_unprocessed_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/notifications_unprocessed_layout"
            app:layout_constraintTop_toTopOf="@+id/notifications_unprocessed_layout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/notifications_vip_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/darkGreyColorDark"
                android:cursorVisible="false"
                android:focusable="false"
                android:hint="@string/number_vip_notifications_hint"
                android:inputType="none"
                android:textAlignment="center"
                android:textColor="?attr/textColor"
                android:textColorHint="@color/lightColor" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pie_chart_messaging"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notifications_vip_layout" />

        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/pie_chart_loading"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            app:layout_constraintBottom_toBottomOf="@+id/pie_chart_messaging"
            app:layout_constraintEnd_toEndOf="@+id/pie_chart_messaging"
            app:layout_constraintStart_toStartOf="@+id/pie_chart_messaging"
            app:layout_constraintTop_toTopOf="@+id/pie_chart_messaging" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/all_notifications_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/textColor"
            app:layout_constraintBottom_toBottomOf="@+id/pie_chart_messaging"
            app:layout_constraintEnd_toEndOf="@+id/pie_chart_messaging"
            app:layout_constraintStart_toStartOf="@+id/pie_chart_messaging"
            app:layout_constraintTop_toTopOf="@+id/pie_chart_messaging" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="?attr/backgroundColor"
        app:headerLayout="@layout/nav_header_drawer"
        app:itemIconTint="@color/drawer_navigation_color"
        app:itemTextColor="@color/drawer_navigation_color"
        app:menu="@menu/menu_left_drawer" />

</androidx.drawerlayout.widget.DrawerLayout>