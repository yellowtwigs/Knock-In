<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.activity.SettingsActivity"
    tools:openDrawer="start">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/backgroundColor"
        android:orientation="vertical">

        <HorizontalScrollView
            android:id="@+id/settings_choose_notif_sound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/settings_choose_notif_sound_title">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/backgroundColor"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/settings_notif_sound_slap_layout"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_layout_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/settings_notif_sound_slap_img"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="Slap"
                        android:textColor="?attr/textColor"
                        android:textSize="18sp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/settings_notif_sound_slap_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="8dp"
                        app:srcCompat="@drawable/ic_bass_guitar" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/settings_notif_sound_xylo_layout"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_layout_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/settings_notif_sound_xylo_img"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="Xylo"
                        android:textColor="?attr/textColor"
                        android:textSize="18sp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/settings_notif_sound_xylo_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="8dp"
                        app:srcCompat="@drawable/ic_xylophone" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/settings_notif_sound_keyboard_layout"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_layout_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/settings_notif_sound_keyboard_img"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="Piano"
                        android:textColor="?attr/textColor"
                        android:textSize="18sp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/settings_notif_sound_keyboard_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="8dp"
                        app:srcCompat="@drawable/ic_piano" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/settings_notif_sound_guitar_layout"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_layout_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/settings_notif_sound_guitar_img"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="Guitar"
                        android:textColor="?attr/textColor"
                        android:textSize="18sp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/settings_notif_sound_guitar_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="8dp"
                        app:srcCompat="@drawable/ic_guitar" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/settings_notif_sound_drum_layout"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_layout_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/settings_notif_sound_drum_img"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="Drum"
                        android:textColor="?attr/textColor"
                        android:textSize="18sp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/settings_notif_sound_drum_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="8dp"
                        app:srcCompat="@drawable/ic_drum_set" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/settings_notif_sound_sax_layout"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_layout_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/settings_notif_sound_sax_img"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="Saxo"
                        android:textColor="?attr/textColor"
                        android:textSize="18sp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/settings_notif_sound_sax_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="8dp"
                        app:srcCompat="@drawable/ic_saxophone" />
                </RelativeLayout>

            </LinearLayout>

        </HorizontalScrollView>

        <RelativeLayout
            android:id="@+id/settings_call_popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/background_layout_selector_with_border"
            android:backgroundTint="?attr/backgroundColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/settings_toolbar">

            <Switch
                android:id="@+id/settings_call_popup_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/settings_call_popup_long_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settings_call_popup_title"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_toStartOf="@+id/settings_call_popup_switch"
                android:text="@string/manage_my_screen_contact_popup_long_text"
                android:textColor="?attr/textColor"
                android:textSize="@dimen/settings_long_text_size"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/settings_call_popup_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/settings_contact_popup_phone_call"
                android:textColor="?attr/textColor"
                android:textSize="@dimen/settings_subtitle_size"
                android:textStyle="normal" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/settings_permissions_phone_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/settings_choose_notif_sound">

            <ProgressBar
                android:id="@+id/settings_permissions_phone_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                android:indeterminate="true"
                android:visibility="gone" />

            <TextView
                android:id="@+id/settings_permissions_phone_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settings_permissions_phone_title"
                android:layout_alignParentStart="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/settings_permissions_phone_button"
                android:text="@string/start_activity_permission_subtitle"
                android:textColor="?attr/textColor"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/settings_permissions_phone_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="25dp"
                android:text="@string/start_activity_permission_title"
                android:textColor="?attr/textColor"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/settings_permissions_phone_check"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_check" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/settings_permissions_phone_button"
                android:layout_width="@dimen/start_activity_button_width"
                android:layout_height="@dimen/start_activity_button_height"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:text="@string/start_activity_button_permission"
                android:textColor="#000000"
                android:textSize="12sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/settings_choose_notif_sound_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="45dp"
            android:text="@string/settings_vip_message_tone"
            android:textColor="?attr/textColor"
            android:textSize="@dimen/settings_subtitle_size"
            android:textStyle="normal"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@id/settings_choose_notif_sound"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/settings_call_popup" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/PremiumButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Acheter premium"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/settings_choose_notif_sound" />


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/settings_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginBottom="8dp"
            android:background="?attr/backgroundColor"
            app:itemTextColor="?attr/textColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="@string/manage_my_screen_toolbar_title"
            app:titleTextColor="?attr/textColor" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/settings_nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="?attr/backgroundColor"
        android:visibility="visible"
        app:headerLayout="@layout/nav_header_drawer"
        app:itemIconTint="@color/drawer_navigation_color"
        app:itemTextColor="@color/drawer_navigation_color"
        app:menu="@menu/menu_left_drawer_layout" />

</androidx.drawerlayout.widget.DrawerLayout>