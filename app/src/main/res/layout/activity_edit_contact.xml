<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/backgroundColor"
    android:orientation="vertical"
    tools:context=".ui.add_edit_contact.edit.EditContactActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/backgroundColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/return_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:background="?attr/actionBarItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_left_arrow" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/delete_contact"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/favorite_contact"
            android:background="?attr/actionBarItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/favorite_contact"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_garbage" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/favorite_contact"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="20dp"
            android:background="?attr/actionBarItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/validate"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_star_no_shine" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/favorite_contact_2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="20dp"
            android:background="?attr/actionBarItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/validate"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_star_shine" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/validate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:background="?attr/actionBarItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_validate" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.05dp"
        android:background="?attr/darkGreyColor"
        app:layout_constraintTop_toBottomOf="@+id/edit_contact_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:background="?attr/backgroundColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_contact_toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/edit_contact_parent_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/backgroundColor"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <com.yellowtwigs.knockin.ui.CircularImageView
                android:id="@+id/contact_image"
                android:layout_width="@dimen/rounded_image_view_height_width"
                android:layout_height="@dimen/rounded_image_view_height_width"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_user_blue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RelativeLayout
                android:id="@+id/first_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/background_layout_no_pressed_with_border"
                android:backgroundTint="?attr/backgroundColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/contact_image">

                <RelativeLayout
                    android:id="@+id/first_name_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@color/transparentColor">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/ic_avatar" />
                </RelativeLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/first_name_input"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_text_height"
                    android:layout_toEndOf="@+id/first_name_icon"
                    android:hint="@string/edit_contact_first_name"
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/textColor">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_edit_text"
                        android:backgroundTint="?attr/backgroundColor"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:textColor="?attr/textColor"
                        android:textColorHint="?attr/textColor" />

                </com.google.android.material.textfield.TextInputLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/last_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_layout_no_pressed_with_border"
                android:backgroundTint="?attr/backgroundColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/first_name_layout">

                <RelativeLayout
                    android:id="@+id/last_name_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@color/transparentColor">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/ic_avatar" />
                </RelativeLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/last_name_input"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_text_height"
                    android:layout_toEndOf="@+id/last_name_icon"
                    android:backgroundTint="?attr/backgroundColor"
                    android:hint="@string/edit_contact_last_name"
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/textColor">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_edit_text"
                        android:backgroundTint="?attr/backgroundColor"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:textColor="?attr/textColor"
                        android:textColorHint="?attr/textColor" />

                </com.google.android.material.textfield.TextInputLayout>

            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/first_phone_number_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/background_layout_no_pressed_with_border"
                android:backgroundTint="?attr/backgroundColor"
                app:layout_constraintBottom_toTopOf="@+id/phone_mail_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/last_name_layout">

                <RelativeLayout
                    android:id="@+id/first_number_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@color/transparentColor"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/ic_phone_call" />
                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/first_number_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="Mobile"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/first_phone_number_input"
                    app:layout_constraintStart_toEndOf="@+id/first_number_icon"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/first_phone_number_input"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="?attr/backgroundColor"
                    android:hint="@string/edit_contact_phone_number"
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/textColor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/first_number_flag">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/first_phone_number_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/custom_edit_text"
                        android:backgroundTint="?attr/backgroundColor"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:textColor="?attr/textColor"
                        android:textColorHint="?attr/textColor" />

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/phone_number_informations"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_about" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <RelativeLayout
                android:id="@+id/phone_mail_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_layout_no_pressed_with_border"
                android:backgroundTint="?attr/backgroundColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/first_phone_number_layout">

                <RelativeLayout
                    android:id="@+id/mail_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@color/transparentColor">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/ic_email" />
                </RelativeLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/mail_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/mail_icon"
                    android:backgroundTint="?attr/backgroundColor"
                    android:hint="@string/edit_contact_mail"
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/textColor">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/custom_edit_text"
                        android:backgroundTint="?attr/backgroundColor"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:textColor="?attr/textColor"
                        android:textColorHint="?attr/textColor" />
                </com.google.android.material.textfield.TextInputLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mail_id_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_layout_no_pressed_with_border"
                android:backgroundTint="?attr/backgroundColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/phone_mail_layout">

                <RelativeLayout
                    android:id="@+id/mail_id_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@color/transparentColor">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/ic_email" />
                </RelativeLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/mail_id_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/mail_id_icon"
                    android:backgroundTint="?attr/backgroundColor"
                    android:hint="@string/add_new_contact_mail_identifier"
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/textColor">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/custom_edit_text"
                        android:backgroundTint="?attr/backgroundColor"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="?attr/textColor"
                        android:textColorHint="?attr/textColor" />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/mail_id_help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:background="?attr/actionBarItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    app:srcCompat="@drawable/ic_about" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/messenger_id_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_layout_no_pressed_with_border"
                android:backgroundTint="?attr/backgroundColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mail_id_layout">

                <RelativeLayout
                    android:id="@+id/messenger_id_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@color/transparentColor">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/ic_messenger" />
                </RelativeLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/messenger_id_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/messenger_id_icon"
                    android:backgroundTint="?attr/backgroundColor"
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/textColor">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/custom_edit_text"
                        android:backgroundTint="?attr/backgroundColor"
                        android:hint="Messenger ID"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textColor="?attr/textColor"
                        android:textColorHint="?attr/textColor" />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/messenger_id_help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:background="?attr/actionBarItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    app:srcCompat="@drawable/ic_about" />

            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/edit_contact_priority_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="?attr/spinnerColor"
                app:layout_constraintBottom_toBottomOf="@+id/priority_explain"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/priority_explain">

                <Spinner
                    android:id="@+id/priority_spinner"
                    android:layout_width="@dimen/spinner_width"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/priority_explain"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="?attr/backgroundColor"
                android:textColor="?attr/textColor"
                android:textColorHint="?attr/textColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/edit_contact_priority_layout"
                app:layout_constraintTop_toBottomOf="@+id/messenger_id_layout" />

            <TextView
                android:id="@+id/vip_settings_text"
                android:layout_width="127dp"
                android:layout_height="21dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="24dp"
                android:backgroundTint="?attr/backgroundColor"
                android:text="@string/contact_vip_settings"
                android:textColor="?attr/textColor"
                android:textColorHint="?attr/textColor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/priority_explain" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/vip_settings_icon"
                android:layout_width="57dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="7dp"
                android:background="?attr/actionBarItemBackground"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.178"
                app:layout_constraintStart_toEndOf="@+id/contact_vip_settings"
                app:layout_constraintTop_toBottomOf="@+id/priority_explain"
                app:srcCompat="@drawable/ic_circular_vip_icon"
                tools:ignore="MissingConstraints" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/edit_contact_group_constraint_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_contact_priority_layout">

                <TextView
                    android:id="@+id/edit_contact_group_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/edit_contact_groups"
                    android:textColor="?attr/textColor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/edit_contact_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edit_contact_group_tv" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</LinearLayout>