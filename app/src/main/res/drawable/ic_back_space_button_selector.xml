<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- disabled state-->
    <item android:drawable="@drawable/ic_backspace_arrow" android:state_enabled="false" />
    <!-- pressed state / clicked state -->
    <item android:drawable="@drawable/ic_backspace_arrow_pressed" android:state_enabled="true" android:state_pressed="true" />
    <!-- focused state -->
    <item android:drawable="@drawable/ic_backspace_arrow" android:state_enabled="true" android:state_focused="true" />
    <!-- enabled state / default state-->
    <item android:drawable="@drawable/ic_backspace_arrow" android:state_enabled="true" />
</selector>