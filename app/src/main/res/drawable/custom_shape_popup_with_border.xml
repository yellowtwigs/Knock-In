    <stroke
        android:width="1dp"
        android:color="#88444444" />
    <corners
        android:radius="10dp" />
    <gradient
        android:angle="90"
        android:centerColor="?attr/backgroundColor"
        android:endColor="?attr/backgroundColor"
        android:startColor="?attr/backgroundColor" />
</shape>