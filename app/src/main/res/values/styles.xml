<resources>

    <!-- Base application theme. -->
    <!-- Light/Day Mode theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:itemBackground">@color/lightColor</item>
        <item name="android:statusBarColor">@color/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/transparentColor</item>
        <item name="darkColor">@color/darkColor</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="backgroundColor">@color/backgroundColor</item>
        <item name="backgroundPressedColor">@color/backgroundPressedColor</item>
        <item name="transparentColor">@color/transparentColor</item>
        <item name="textColor">@color/textColorDark</item>
        <item name="textColorLight">@color/textColorLight</item>
        <item name="lightGreyColor">@color/lightGreyColor</item>
        <item name="colorSurface">@color/lightGreyColor</item>
        <item name="darkGreyColor">@color/darkGreyColor</item>
        <item name="android:windowAnimationStyle">@style/noAnimTheme</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="spinnerColor">@color/lightGreyColor</item>
    </style>

    <!-- Dark/Night Mode theme. -->
    <style name="AppThemeDark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="darkColor">@color/lightColor</item>
        <item name="android:statusBarColor">@color/colorPrimaryVariant</item>
        <item name="android:itemBackground">@color/textColorLight</item>
        <item name="android:navigationBarColor">@color/transparentColorDark</item>
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="backgroundColor">@color/backgroundColorDark</item>
        <item name="backgroundPressedColor">@color/backgroundPressedColorDark</item>
        <item name="transparentColor">@color/transparentColorDark</item>
        <item name="textColor">@color/textColorLight</item>
        <item name="textColorLight">@color/textColorDark</item>
        <item name="lightGreyColor">@color/lightGreyColorDark</item>
        <item name="colorSurface">@color/lightGreyColorDark</item>
        <item name="darkGreyColor">@color/darkGreyColorDark</item>
        <item name="android:windowAnimationStyle">@style/noAnimTheme</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="spinnerColor">@color/lightGreyColorDark</item>
    </style>

    <style name="windowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="noAnimTheme" parent="android:Theme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/TextAppearance.BottomNavigationView.Active
        </item>
        <item name="itemTextAppearanceInactive">
            @style/TextAppearance.BottomNavigationView.Inactive
        </item>
    </style>

    <!-- blank styles for better code readability-->
    <style name="TextAppearance" />

    <style name="TextAppearance.BottomNavigationView" />

    <!-- inactive tab icon style -->
    <style name="TextAppearance.BottomNavigationView.Inactive">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- active tab icon style -->
    <style name="TextAppearance.BottomNavigationView.Active">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AlertDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:background">?attr/backgroundColor</item>
        <item name="android:textColorPrimary">?attr/textColor</item>

        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#f8b122</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#f8b122</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/lightColor</item>
        <item name="colorControlActivated">@color/lightColor</item>
        <item name="colorControlHighlight">@color/lightColor</item>
    </style>
</resources>
